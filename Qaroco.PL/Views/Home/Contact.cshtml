@model Qaroco.DL.MessageSystem
@{
    /**/
    ViewBag.Title = "İletişim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    function formKontrol() {

        ad = document.getElementById("FirstName").value;
        soyad = document.getElementById("LastName").value;
        email = document.getElementById("email").value;
        konu = document.getElementById("Title").value;
        mesaj = document.getElementById("content").value;

        if (ad == "" || soyad == "" || email == "" || konu == "" || mesaj == "") {
            alert("Mesajınız Gönderilemedi. Lütfen boş alan bırakmayınız.");
        }
    }

</script>

<div class="site-section">
    <div class="container">
        <div class="row mb-5 align-items-end">
            <div class="col-md-6" data-aos="fade-up">

                <h2>Bize Ulaşın</h2>
                <hr />
               
            </div>

        </div>

        <div class="row">
            <div class="col-md-4 ml-auto order-2" data-aos="fade-up">
                <ul class="list-unstyled">
                    <li class="mb-3">
                        <strong class="d-block mb-1">Adres</strong>
                        <span>İstanbul/Türkiye</span>
                    </li>
                    <li class="mb-3">
                        <strong class="d-block mb-1">Mail</strong>
                        <span>info@qaroco.com</span>
                    </li>
                </ul>

            </div>


            <div class="col-md-6 mb-5 mb-md-0" data-aos="fade-up">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "contact-form", action = "" }))
                {
                    <form role="form" class="php-email-form">

                        <div class="row">

                            @Html.ValidationSummary()
                            <div class="col-md-12 form-group">
                                <label for="name">Adınız</label>
                                <input type="text" name="FirstName" class="form-control" id="FirstName" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                                @*<p>@Html.TextBoxFor(a => a.FirstName, "", new { @class = "form-control" })</p>*@

                                <div class="validate"></div>
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="name">Soyadınız</label>
                                <input type="text" name="LastName" class="form-control" id="LastName" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                                @*<p>@Html.TextBoxFor(a => a.LastName, new { @class = "form-control" })</p>*@

                            </div>
                            <div class="col-md-6 form-group">
                                <label for="mail">Mail</label>
                                <input type="email" class="form-control" name="Email" id="email" data-rule="email" data-msg="Please enter a valid email" />
                                @*<p>@Html.TextBoxFor(a => a.Email, new { @class = "form-control" })</p>*@

                            </div>
                            <div class="col-md-12 form-group">
                                <label for="subject">Konu</label>
                                <input type="text" class="form-control" name="Title" id="Title" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject" />
                                @*<p>@Html.TextBoxFor(a => a.Title, new { @class = "form-control" })</p>*@

                            </div>
                            <div class="col-md-12 form-group">
                                <label for="message">Mesaj</label>
                                <textarea class="form-control" id="content" name="Content" cols="30" rows="10" data-rule="required" data-msg="Please write something for us"></textarea>
                                @*<p>@Html.TextAreaFor(a => a.Content, new { @class = "form-control" })</p>*@

                            </div>

                            <div class="col-md-12 mb-3">

                                @if (TempData["Success"] != null)
                                {
                                    <div class="error-message"></div>
                                    <div class="alert col-md-4 alert-success" role="alert" id="success_message">
                                        @TempData["Success"] <i class="lar la-smile"></i>
                                    </div>
                                }



                            </div>

                            <div class="col-md-6 form-group">
                                <button type="submit" onclick="formKontrol()" class="btn btn-primary d-block w-100"> Gönder <i class="las la-envelope-open-text"></i></button>
                            </div>


                        </div>

                    </form>
                }

            </div>

        </div>
    </div>
</div>

