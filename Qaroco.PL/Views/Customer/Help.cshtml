@model List<Qaroco.DL.MessageSystem>

@{
    ViewBag.Title = "Yardım";
    Layout = "~/Views/Shared/CustomerLayout.cshtml";
}

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container-contact100">
            <div class="wrap-contact100">
                <form class="contact100-form validate-form" method="post">
                    <span class="contact100-form-title">
                        Nasıl Yardımcı Olabiliriz?
                    </span>
                    @if (TempData["Success"] != null)
                    {
                    <div class="alert-success">@TempData["Success"] &nbsp <i class="fa fa-envelope" aria-hidden="true"></i></div>
                    }<br />
                    <div class="wrap-input100 validate-input" data-validate="Please enter your firstname">
                        <input class="input100" type="text" name="FirstName" placeholder="Adınız" value="@ViewBag.User.FirstName">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Please enter your lastname">
                        <input class="input100" type="text" name="LastName" placeholder="Soyadınız" value="@ViewBag.User.LastName">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Please enter your email: e@a.x">
                        <input class="input100" type="text" name="Email" placeholder="E-mail" value="@ViewBag.User.Email">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Please enter your title">
                        <input class="input100" type="text" name="Title" placeholder="Konu">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Please enter your message">
                        <textarea class="input100" name="Content" placeholder="Mesaj"></textarea>
                        <span class="focus-input100"></span>
                    </div>

                    <div class="container-contact100-form-btn">
                        <button class="contact100-form-btn">
                            <span>
                                Gönder
                            </span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div id="dropDownSelect1"></div>
    }
