@model Qaroco.DL.User
@{
    ViewBag.Title = "Giriş Yap";
    Layout = "~/Views/Shared/RegisterLoginLayout.cshtml";

}
<head>
    <link href="~/Content/Register/css/popup-styles.css" rel="stylesheet" />

</head>


<div style="height:84px; background:black;">

</div>
<div class="limiter">

    <div class="container-login100">
        <div class="login100-more" style="background-image: url('../../Content/Register/images/bg-01.jpg');">
            <div class="col-md-12 register-resim">
                <img src="/Content/Template/img/logo.png" height="auto" class="register-logo-beyaz" style="max-width: 200px;">
                <img src="/Content/Template/img/logo-siyah.png" height="auto" class="register-logo-siyah" style="max-width: 200px;">
            </div>
            <div class="col-md-12 register-yazi"><h1>Hızlı ve yeni nesil taşımacılık</h1> </div>
        </div>

        <div class="wrap-login100 p-l-50 p-r-50 p-t-85 p-b-50">



            <form class="login100-form validate-form" method="post" action="/User/Login">
                @using (Html.BeginForm("User", "Login", FormMethod.Post))
                {

                    <span class="login100-form-title p-b-59">
                        Giriş Yap
                    </span>
                    @Html.Partial("MessagePartial", TempData["Mesaj"])
                   
                    <span style="color:red;">
                        @Html.ValidationSummary()
                        <br>
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Kullanıcı Adı Gereklidir">
                        <span class="label-input100">Kullanıcı Adı</span>
                        @*@Html.TextBoxFor(a => a.Email, new { @class = "input100" })*@
                        <input type="email" id="Email" class="input100" name="email" />

                        <span class="focus-input100"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Şifre Gereklidir">
                        <span class="label-input100">Şifre</span>
                        @*@Html.TextBoxFor(a => a.Password, new { @class = "input100" })*@
                        <input type="password" id="password" class="input100" name="Password" minlength="4" maxlength="16" />
                        <i class="fa fa-eye-slash" onclick="togglePassword()"></i>
                        <span class="focus-input100"></span>

                    </div>

                    <div class="flex-m w-full p-b-33">
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                            <label class="label-checkbox100" for="ckb1">
                                <span class="txt1">
                                    Beni Hatırla
                                </span>

                            </label>
                        </div>

                    </div>






                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>

                            <button class="login100-form-btn">
                                Giriş Yap
                            </button>
                        </div>
                        <a href="/User/Register" class="dis-block txt3 hov1 p-r-30 p-t-10 p-b-10 p-l-30">
                            Kayıt Ol
                            <i class="fa fa-long-arrow-right m-l-5"></i>
                        </a>
                    </div>
                    <input type="hidden" id="g-recaptcha-response" name="g-recaptcha-response" value="" />
                    <script src="https://www.google.com/recaptcha/api.js?render=6Lch1uoUAAAAAI1R8ABoL4g93bwRd0Q0548HWct4"></script>
                    <script>
                        grecaptcha.ready(function () {
                            grecaptcha.execute('6Lch1uoUAAAAAI1R8ABoL4g93bwRd0Q0548HWct4', { action: 'Login' }).then(function (token) {
                                document.getElementById("g-recaptcha-response").value = token;
                            });
                        });
                    </script>

                }


            </form>
            <br />
            <div class="flex-m w-full p-b-33">
                <div class="contact100-form-checkbox">
                    <div class="popup-container">
                        <label class="button" for="contract-popup">Şifremi Unuttum</label>
                        <input type="checkbox" id="contract-popup">
                        <div class="popup">
                            <label for="contract-popup"></label>
                            <div class="inner">
                                <div class="title">
                                    <h6>Şifremi Unuttum </h6>
                                    <label for="contract-popup">
                                        <i class="fa fa-times"></i>
                                    </label>
                                </div>
                                <div class="content">
                                    <div class="container">
                                        @using (Html.BeginForm("UserPasswordUpdate", "User", FormMethod.Post))
                                        {
                                            <form>
                                                <div class="row">
                                                    <div class="form-group col-md-12">
                                                        <label for="exampleInputEmail1">Email</label>
                                                        <input type="email" name="email" style="position: relative;left: auto; border-bottom: 1px solid black;
    width: 100%; box-sizing: border-box !important;
    border-radius: 0px !important;" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="">

                                                    </div>
                                                </div>

                                                <div class="form-group col-md-12">
                                                    <input class="form-control" style="position: relative; background-color:lightgreen; left: auto;
    width: 100%; height:2%; " type="submit" value="Gönder" />
                                                </div>
                                            </form>
                                        }

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    function togglePassword() {
        var element = document.getElementById('password');
        element.type = (element.type == 'password' ? 'text' : 'password');


    }

</script>