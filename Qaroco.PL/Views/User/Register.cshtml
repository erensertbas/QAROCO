                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @*popup bitiş*@
                                    <span class="txt1">
                                        Okudum ve Kabul Ediyorum
                                    </span>
                                </label>
                            </div>

                        </div>

                        <div class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>
                                <a href="/User/Register">
                                    <button class="login100-form-btn">
                                        Kayıt Ol
                                    </button>
                                </a>
                            </div>

                            <a href="/User/Login" class="dis-block txt3 hov1 p-r-30 p-t-10 p-b-10 p-l-30">
                                Giriş Yap
                                <i class="fa fa-long-arrow-right m-l-5"></i>
                            </a>
                        </div>

                        <input type="hidden" id="g-recaptcha-response" name="g-recaptcha-response" value="" />
                        <script src="https://www.google.com/recaptcha/api.js?render=6Lch1uoUAAAAAI1R8ABoL4g93bwRd0Q0548HWct4"></script>
                        <script>
                            grecaptcha.ready(function () {
                                grecaptcha.execute('6Lch1uoUAAAAAI1R8ABoL4g93bwRd0Q0548HWct4', { action: 'Register' }).then(function (token) {
                                    document.getElementById("g-recaptcha-response").value = token;
                                });
                            });
                        </script>

                    }

                </form>
            </div>
        </div>
    </div>
    <script>
        function togglePassword() {
            var element = document.getElementById('password');
            element.type = (element.type == 'password' ? 'text' : 'password');
        }
        function GetId(i) {
            document.getElementById("UserId").value = i;
            document.getElementById("PopImage").style.display = "none";
        }
    </script>


}









