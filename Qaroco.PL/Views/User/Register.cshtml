    <button style="width:48%;height:auto;margin-right:1rem;display:inline-block;" onclick="GetId(1)"><img style="width: 100%; height: auto;" src="~/Content/Template/img/businessman-register.jpg" alt="Alternate Text" /></button>
    <button style="width:48%;height:auto;display:inline-block;" onclick="GetId(2)"><img style="width:100%;height:auto;" src="~/Content/Template/img/courier-registerr.jpg" alt="Alternate Text" /></button>
</div>
